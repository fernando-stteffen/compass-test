  "paths": {
    "/cities": {
      "post": {
        "tags": ["Cities"],
        "summary": "Create a City",
        "description": "This route create a new city in database records",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "state": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Pirapora",
                  "state": "MG"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Missing property a property"
          }
        }
      }
    }
  }
}
