{
  "openapi": "3.0.0",
  "info": {
    "title": "Compass UOL API Documentation",
    "description": "This is an API to record clients and cities data - God Bless You for reading this ( :D )",
    "version": "1.0.0",
    "contact": {
      "email": "fernandostteffen@gmail.com"
    }
  },
  "paths": {
    "/cities": {
      "post": {
        "tags": ["Cities"],
        "summary": "Create a City",
        "description": "This route create a new city in database records",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "state": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Pirapora",
                  "state": "MG"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Missing property a property"
          }
        }
      },
      "get": {
        "tags": ["Cities"],
        "summary": "list Cities recorded on database",
        "description": "This route return a list of cities registred that list can be filtred by query params at url",
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "description": "name to cities filter by",
            "required": false
          },
          {
            "name": "state",
            "in": "query",
            "description": "state to cities filter by",
            "required": false
          }
        ],
        "responses": {
          "200": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "state": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/clients": {
      "post": {
        "tags": ["Clients"],
        "summary": "Create a Client",
        "description": "This route create a new client in database records",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "sex": {
                    "type": "string"
                  },

                  "birthDate": {
                    "type": "string"
                  },
                  "cityName": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "João Henrique",
                  "sex": "M",
                  "birthDate": "1990-01-01",
                  "cityName": "Rio de Janeiro"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Missing property a property"
          }
        }
      },
      "patch": {
        "tags": ["Clients"],
        "summary": "Alter name of a Client",
        "description": "This route alter name of an client who has alredy on database records",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  }
                },
                "example": {
                  "id": "84354e5f-1d62-4b31-bc87-593330a7de75",
                  "name": "Zé pequeno"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Altered"
          },
          "400": {
            "description": "Missing property a property"
          }
        }
      },
      "get": {
        "tags": ["Clients"],
        "summary": "list Clients recorded on database",
        "description": "This route return a list of clients registred that list can be filtred by name in query params at url",
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "description": "name of an client to filter by",
            "required": false
          }
        ],
        "responses": {
          "200": {
            "description": "Received",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "sex": {
                        "type": "string"
                      },
                      "birthDate": {
                        "type": "string"
                      },
                      "city": {
                        "type": "string"
                      },
                      "state": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/clients/{id}": {
      "get": {
        "tags": ["Clients"],
        "summary": "Get a Client who has recorded on database",
        "description": "This route return a client filtred by id at url",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "id of an client to filter by",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Received",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "sex": {
                        "type": "string"
                      },
                      "birthDate": {
                        "type": "string"
                      },
                      "city": {
                        "type": "string"
                      },
                      "state": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Client ID not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "message": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["Clients"],
        "summary": "Delete a Client from database",
        "description": "This route dele a client by id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "id of an client to delete",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Deleted"
          },
          "400": {
            "description": "Client ID not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "message": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
